        <index referenceId="SALES_ORDER_STATUS" indexType="btree">
            <column name="status"/>
        </index>
        <index referenceId="SALES_ORDER_CREATED_AT" indexType="btree">
            <column name="created_at"/>
        </index>
        <index referenceId="SALES_ORDER_UPDATED_AT" indexType="btree">
